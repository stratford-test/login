<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="NegativeLoginTest" verbose="1">


	<test name="NegativeUserNameTest">
		<parameter name="browser" value="chrome" />
		<parameter name="username" value="tomsmith1" />
		<parameter name="password" value="SuperSecretPassword!" />
		<parameter name="expectedMessage"
			value="Your username is invalid!" />
		<classes>
			<class
				name="com.herokuapp.theinternet.loginpagetest.NegativeLoginTest" />
		</classes>
	</test>



	<test name="NegativePasswordTest">
		<parameter name="browser" value="chrome" />
		<parameter name="username" value="tomsmith" />
		<parameter name="password" value="SuperSecretPassword" />
		<parameter name="expectedMessage"
			value="Your password is invalid!" />
		<classes>
			<class
				name="com.herokuapp.theinternet.loginpagetest.NegativeLoginTest" />
		</classes>
	</test>
</suite>

