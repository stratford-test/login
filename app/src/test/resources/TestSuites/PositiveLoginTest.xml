<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="PositveLoginTest" verbose="1" parallel="tests" thread-count="4">


	<test name="logIn">

		<parameter name="browser" value="chrome" />
		<parameter name="url"
			value="https://the-internet.herokuapp.com"/>
		<parameter name="username" value="tomsmith" />
		<parameter name="password" value="SuperSecretPassword!" />
		<parameter name="expectedMessage"
			value="You logged into a secure area!" />
		<classes>
			<class name="com.herokuapp.theinternet.loginpagetest.PositiveloginTest" />
		</classes>
	</test>
	
	<test name="logInFirefox">

		<parameter name="browser" value="firefox" />
		<parameter name="url"
			value="https://the-internet.herokuapp.com"/>
		<parameter name="username" value="tomsmith" />
		<parameter name="password" value="SuperSecretPassword!" />
		<parameter name="expectedMessage"
			value="You logged into a secure area!" />
		<classes>
			<class name="com.herokuapp.theinternet.loginpagetest.PositiveloginTest" />
		</classes>
	</test>
	
	<test name="logInIpad">

		<parameter name="browser" value="Ipad" />
		<parameter name="url"
			value="https://the-internet.herokuapp.com"/>
		<parameter name="username" value="tomsmith" />
		<parameter name="password" value="SuperSecretPassword!" />
		<parameter name="expectedMessage"
			value="You logged into a secure area!" />
		<classes>
			<class name="com.herokuapp.theinternet.loginpagetest.PositiveloginTest" />
		</classes>
	</test>
</suite>

